# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-key
# Direct Postgres connection string (optional; used for raw SQL/admin migrations, NOT for the JS/HTTP client)
SUPABASE_DB_URL=postgres://postgres:your-db-password@db.your-project.supabase.co:5432/postgres

# AI Model API Keys
OPENAI_API_KEY=sk-...
GROK_API_KEY=xai-...
GEMINI_API_KEY=AIza...
PERPLEXITY_API_KEY=pplx-...

# Meta (Facebook/Instagram) API
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret
META_ACCESS_TOKEN=your-page-access-token

# Application Settings
APP_NAME="Campaign Management Platform"
APP_VERSION="1.0.0"
DEBUG=False

# Default Budget Settings (USD)
DEFAULT_DAILY_BUDGET=100.0
DEFAULT_CAMPAIGN_BUDGET=1000.0
BUDGET_WARNING_THRESHOLD=0.8

# Scheduling (Cron expressions)
ORCHESTRATOR_SCHEDULE="0 */6 * * *"
CONTENT_CREATOR_SCHEDULE="0 */4 * * *"
RESEARCHER_SCHEDULE="0 0 * * *"
METRICS_COLLECTOR_SCHEDULE="0 * * * *"

# Content Generation Settings
MAX_HASHTAGS=30
MAX_POST_LENGTH=2200
IMAGE_GENERATION_MODEL=gemini-flash
VIDEO_GENERATION_MODEL=chinese-model-v1

# Rate Limiting
API_RATE_LIMIT=100
CONTENT_GENERATION_LIMIT=50